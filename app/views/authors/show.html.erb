<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @author.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @author.last_name %>
</p>

<p>
  <strong>Homepage:</strong>
  <%= @author.homepage %>
</p>

<p>
  <strong>Papers:</strong>
    <ul>
      <% @author.papers.each do |paper| %>
        <li><%= link_to(paper.title, paper) %></li>
    <% end %>
  </ul>
</p>

